	visible =false


func show_details_received(Shop_ID):
	for child in eintage.get_children():
		child.queue_free()
	cur_showing=Shop_ID #cur_showingwird auserhalb dieser fuktion zum kaufen ben√∂ting
	#cur_showing=self #DELET AFTER TESTING##############################################################################################!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!	
	var key = Array(cur_showing.base_values.keys())
	var val = Array(cur_showing.base_values.values())
	for i in cur_showing.base_values.size():
		print(i)
		var add = pre_eintrag.instance()
		add.get_node(\"txt\").text=key[i]
		add.get_node(\"NR\").text=str(val[i])
		eintage.add_child(add)
	
	visible =true
	
	
	get_node(\"VBoxContainer/HBoxContainer/MarginContainer/HBoxContainer/VBoxContainer/top line/Label\").text = str(Shop_ID) #get_name(id)
	var liste =get_node(\"VBoxContainer/HBoxContainer/MarginContainer/HBoxContainer/VBoxContainer/HBoxContainer/ScrollContainer/VBoxContainer\")
	#liste.get_child(1).get_node(
	_on_MarginContainer_draw()
	
	
func _on_Kaufen_pressed():
	var cur_spieler
	if owner.owner.player1:
		cur_spieler = owner.owner.get_node(\"Spieler/SP1\")
	else:
		cur_spieler = owner.owner.get_node(\"Spieler/SP1\")
#	if cur_spieler.geld <= cur_showing.atribute[0][1]:
#		return
	var spawn =load(cur_showing.filename).instance()
	spawn.position.x = cur_spieler.get_node(\"Camera2D\").position.x
	spawn.position.y = cur_spieler.get_node(\"Camera2D\").position.y
	cur_spieler.get_node(\"Units\").add_child(spawn)
	pass # Replace with function body.


func _on_MarginContainer_draw():
	pass
	if(get_node(\"VBoxContainer/HBoxContainer/MarginContainer/HBoxContainer/VBoxContainer/HBoxContainer/ScrollContainer/VBoxContainer\").get_child_count()<anzahl_zeigen):
		rect_min_size.y=20* get_node(\"VBoxContainer/HBoxContainer/MarginContainer/HBoxContainer/VBoxContainer/HBoxContainer/ScrollContainer/VBoxContainer\").get_child_count()
	else:
		rect_min_size.y=anzahl_zeigen*20
	rect_size =rect_min_size
	pass # Replace with function body.

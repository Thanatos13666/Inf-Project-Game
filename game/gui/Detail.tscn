const pre_eintrag = preload(\"res://game/gui/deiatl_eintrag.tscn\")

func _ready():
	visible =false	
	for sp_item in self.owner.get_node(\"VBoxContainer2/margin hold/shop+ buton/shop grop/HBoxContainer/VBoxContainer/u_r/Shop_scroll_con/VBoxContainer\").get_children():
		sp_item.connect(\"show_details\",self,\"show_details_received\")
	
	

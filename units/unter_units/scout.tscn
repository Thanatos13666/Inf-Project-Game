#variables----------------------------------------------------------------------
var base_values = {
	\"Preis\":120,
	\"Leben\":10,
	\"Angriff\":10,
	\"Ausweichen\":40,
	\"Reichweite\": 5,
	\"Bewegungsrate\":8
}

var curr_values = {
	\"Leben\":base_values.Leben,
	\"Angriff\":base_values.Angriff,
	\"Ausweichen\":base_values.Ausweichen,
	\"Reichweite\":base_values.Reichweite,
	\"Bewegungsrate\":base_values.Bewegungsrate,
}

var dashBonus = 4;

#functions----------------------------------------------------------------------
func dash():
	if curr_values.Bewegungsrate == base_values.Bewegungsrate:
		curr_values.Bewegungsrate += dashBonus;
	pass

#base functions-----------------------------------------------------------------
func getDmg(dmg):
	curr_values.Leben -= dmg;
	if curr_values.Leben <= 0:
		die();
	pass

func die():
	self.queue_free();
	pass
